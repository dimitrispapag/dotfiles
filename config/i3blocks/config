# i3blocks config with Nerd Font icons and colors
separator=true
separator_block_width=15
markup=pango

# CPU - ï‹›
[cpu]
label=<span color="#ff79c6">ï‹› </span>
command=cpu=$(top -bn1 | grep "Cpu(s)" | awk -F'id,' '{ split($1, vs, ","); v=vs[length(vs)]; sub("%", "", v); print 100 - v }'); printf "<span color='#50fa7b'>%.1f%%</span>\n" $cpu
interval=2

# Memory - ï”¸
[memory]
label=<span color="#8be9fd">ï”¸ </span>
command=~/.config/i3blocks/scripts/memory.sh
interval=10

# CPU Temperature - ğŸŒ¡
[temperature]
label=<span color="#ff5555">ğŸŒ¡ </span>
command=temp=$(sensors | grep 'Package id 0' | awk '{print $4}' | sed 's/+//' | sed 's/Â°C.*//'); if [ -n "$temp" ]; then echo "<span color='#f8f8f2'>${temp}Â°C</span>"; else echo "<span color='#6272a4'>N/A</span>"; fi
interval=10

# GPU Temperature - ğŸ®
[gpu-temp]
label=<span color="#ff79c6">ğŸ® </span>
command=gpu_temp=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits 2>/dev/null); if [ -n "$gpu_temp" ]; then echo "<span color='#f8f8f2'>${gpu_temp}Â°C</span>"; else echo "<span color='#6272a4'>N/A</span>"; fi
interval=10

# SSD Temperature - ğŸ’¾
[ssd-temp]
label=<span color="#bd93f9">ğŸ’¾ </span>
command=nvme_temp=$(sensors | grep 'Composite' | awk '{print $2}' | sed 's/+//' | sed 's/Â°C.*//'); if [ -n "$nvme_temp" ]; then echo "<span color='#f8f8f2'>${nvme_temp}Â°C</span>"; else echo "<span color='#6272a4'>N/A</span>"; fi
interval=15

# Disk - ï‚ 
[disk-home]
label=<span color="#50fa7b">ğŸ  </span>
command=disk=$(df /home | awk 'END{print $5}' | sed 's/%//'); used=$(df -h /home | awk 'END{print $3}'); total=$(df -h /home | awk 'END{print $2}'); if [ "$disk" -lt 50 ]; then color="#50fa7b"; elif [ "$disk" -lt 75 ]; then color="#f1fa8c"; elif [ "$disk" -lt 90 ]; then color="#ffb86c"; else color="#ff5555"; fi; echo "<span color='$color'>${used}/${total}</span>"
interval=30

# Volume - ï€¨ / ï€¦ (muted)
[volume]
label=<span color="#ffb86c">ï€¨ </span>
command=vol=$(pactl get-sink-volume @DEFAULT_SINK@ 2>/dev/null | grep -Po '\d+%' | head -1); mute=$(pactl get-sink-mute @DEFAULT_SINK@ 2>/dev/null); if [[ "$mute" == *"yes"* ]]; then echo "<span color='#6272a4'>ï€¦ MUTE</span>"; elif [ -z "$vol" ]; then echo "<span color='#ff5555'>N/A</span>"; else echo "<span color='#50fa7b'>$vol</span>"; fi
interval=1
signal=10

# Weather - î³
[weather]
label=<span color="#f1fa8c">î³ </span>
command=~/.config/i3blocks/scripts/weather.sh
interval=1800
timeout=10

# Date - ï³
[date]
label=<span color="#bd93f9">ï³ </span>
